<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_popup"
        android:gravity="center">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="20dip"
                    android:text="@string/server_not_responding"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/txt_size_14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scroll"
            android:orientation="horizontal">

            <com.zerosymbol.directorylisting.custom.CustomTextViewTitle
                android:id="@+id/btn_cancal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_7dp"
                android:layout_weight="0.5"
                android:background="@drawable/drawable_button"
                android:gravity="center"
                android:padding="@dimen/_7dp"
                android:text="@string/cancel"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <com.zerosymbol.directorylisting.custom.CustomTextViewTitle
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_7dp"
                android:layout_weight="0.5"
                android:background="@drawable/drawable_button"
                android:gravity="center"
                android:padding="@dimen/_7dp"
                android:text="@string/ok"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>
</layout>