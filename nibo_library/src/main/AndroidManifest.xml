<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.alium.nibo">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />


        <activity
            android:name=".placepicker.NiboPlacePickerActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/NiboPlacePickerTheme.NoActionBar" />
        <activity
            android:name=".origindestinationpicker.NiboOriginDestinationPickerActivity"
            android:label="@string/title_activity_origin_destination_picker"
            android:screenOrientation="portrait"
            android:theme="@style/NiboTheme" />
    </application>

</manifest>